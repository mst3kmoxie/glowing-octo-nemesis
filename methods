class Person {
	// Instance variables (data or "state")

	String name;
	int age;

	// Classes can contain

	// 1. Data
	// 2. Subroutines (methods)
	void speak() {
		for(int i=0; i<1; i++){
		System.out.println("My name is " + name + " and I am " + age + " years old.");
		}
	}
	
	void wantBelief() {
		System.out.println("I want to believe!");
	}
}

public class ClassesObjects {
	public static void main(String[] args) {

		Person person1 = new Person();

		person1.name = "Fox Mulder";
		person1.age = 37;
		person1.speak();
		person1.wantBelief();

		Person person2 = new Person();
		person2.name = "Dana Scully";
		person2.age = 33;
		person2.speak();
		person2.wantBelief();
		
		
		Person person3 = new Person();
		person3.name = "Cigarette Smoking Man";
		person3.age = 67;
		person3.speak();
		person3.wantBelief();
		
		
	}
}
