class Frog {
	private String name;
	private int age;
	
	public void setName(String name) {
		this.name = name;
		
		// When items have same label/names, use of simply that label will refer to the local variable (argumental parameter).
		// In order to refer to instance variable use "this.label"
		// "this" refers to the object itself that is calling the method.
	}

	public void setAge(int age) {
		this.age = age;
	}
	
	public String getName() {
		return name;
	}

	public int getAge() {
		return age;
	}
}

public class Setters {
	public static void main(String[] args) {

		Frog frog1 = new Frog();
		
		// This is setting an instance variable with an equals sign.
		// frog1.name = "Bertie";
		// frog1.age = 1;
		
		//This is calling a method. 
		frog1.setName("Bertie");
		frog1.setAge(1);
	
		
		System.out.println(frog1.getName() + " " + frog1.getAge());
		
	}
}
